<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/selectorColor"/>
            <padding />
            <corners android:bottomRightRadius="@dimen/button_padding_dimes" android:bottomLeftRadius="@dimen/button_padding_dimes" android:topLeftRadius="@dimen/button_padding_dimes" android:topRightRadius="@dimen/button_padding_dimes"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <padding />
            <corners android:bottomRightRadius="@dimen/button_padding_dimes" android:bottomLeftRadius="@dimen/button_padding_dimes" android:topLeftRadius="@dimen/button_padding_dimes" android:topRightRadius="@dimen/button_padding_dimes"/>
        </shape>
    </item>
